<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="16dp">

    <!-- Date Placeholder -->
    <TextView
        android:id="@+id/textViewSelectDate"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:padding="16dp"

        android:layout_marginBottom="16dp" />

    <!-- Show Menu Button -->
<!--    <Button
        android:id="@+id/buttonShowMenu"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Show Menu"
        android:backgroundTint="@color/green"
        android:textColor="@android:color/white"
        android:layout_marginBottom="30dp" />-->

    <!-- Menu Card for Non-Vegetarian -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Non-Vegetarian Menu"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <!-- Non-Vegetarian Menu Details -->
        <TextView
            android:id="@+id/textViewNonVegMainDish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Dish: N/A" />

        <TextView
            android:id="@+id/textViewNonVegSideDish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Side Dish: N/A" />

        <TextView
            android:id="@+id/textViewNonVegDessert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dessert: N/A" />

        <TextView
            android:id="@+id/textViewNonVegSoup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soup: N/A" />

        <TextView
            android:id="@+id/textViewNonVegCalorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories: N/A" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Menu Card for Vegetarian -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vegetarian Menu"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <!-- Vegetarian Menu Details -->
        <TextView
            android:id="@+id/textViewVegMainDish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Dish: N/A" />

        <TextView
            android:id="@+id/textViewVegSideDish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Side Dish: N/A" />

        <TextView
            android:id="@+id/textViewVegDessert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dessert: N/A" />

        <TextView
            android:id="@+id/textViewVegSoup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soup: N/A" />

        <TextView
            android:id="@+id/textViewVegCalorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories: N/A" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>
  </LinearLayout>
</ScrollView>
